@model transport.Models.teacher

@{
    ViewData["Title"] = "Create";
}

<h1>ادخال الرغبات</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="teacherName" class="control-label"></label>
                <input asp-for="teacherName" class="form-control" />
                <span asp-validation-for="teacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birth" class="control-label"></label>
                <input asp-for="birth" class="form-control" />
                <span asp-validation-for="birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="last" class="control-label"></label>
                <input asp-for="last" class="form-control" />
                <span asp-validation-for="last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hire" class="control-label"></label>
                <input asp-for="hire" class="form-control" />
                <span asp-validation-for="hire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.desire.desirename" class="control-label"></label>
                <select asp-for="desireid" class ="form-control" asp-items="@(new SelectList(ViewBag.desires,"desireid", "desirename"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="انشاء" class="btn btn-primary mt-2" />
                    <a asp-action="Index" class="btn btn-secondary mt-2">العودة</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
